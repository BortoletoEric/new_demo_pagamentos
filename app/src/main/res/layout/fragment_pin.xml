<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_pinPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keyboard_gradient"
    android:orientation="vertical"
    tools:context=".fragments.PinFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="@drawable/background_blue_gertec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/inter"
        android:text="Insira, passe o cartÃ£o ou"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        />

    <include
        android:id="@+id/displayKeyboard"
        layout="@layout/layout_display_keyboard"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="82dp" />

    <include
        android:id="@+id/keyboard"
        layout="@layout/layout_pin_keyboard" />

</androidx.constraintlayout.widget.ConstraintLayout>


