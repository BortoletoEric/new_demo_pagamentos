<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_blue_gertec"
    android:elevation="10dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:outlineProvider="none"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:showIn="@layout/fragment_sucess_pay"
    android:id="@+id/displayCardInfo">

    <ImageView
        android:background="@drawable/background_blue_gertec"
        android:id="@+id/imageView2"
        android:layout_height="150dp"
        android:layout_width="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:background="@drawable/background_blue_gertec"
        android:layout_height="150dp"
        android:layout_width="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtCard"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:text="Cartão"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txtFormat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtFinalCardNumbers"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:text="1234"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtApplicationType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtHideCardNumber"
        android:inputType="numberPassword"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:letterSpacing="0.18"
        android:text="3457"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtApplicationType"
        app:layout_constraintEnd_toStartOf="@+id/txtFinalCardNumbers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtFormat"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:text="Formato"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtCodSale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCard" />


    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtApplicationType"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_width="wrap_content"
        android:text="Crédito"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtCodeSaleValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFinalCardNumbers" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtCodSale"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:text="Cód. venda"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtCNPJ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFormat" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtCodeSaleValue"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_width="wrap_content"
        android:text="73664829"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtCNPJValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtApplicationType" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtCNPJ"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:text="CNPJ"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodSale" />

    <TextView
        android:fontFamily="@font/inter"
        android:id="@+id/txtCNPJValue"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="wrap_content"
        android:text="21.090.404/0001-48"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodeSaleValue" />
</androidx.constraintlayout.widget.ConstraintLayout>


