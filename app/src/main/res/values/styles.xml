<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:statusBarColor">#113f67</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomButtonKeyboard" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/keyboard_btn_settings</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textColor">#245271</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButtonKeyboardConfirm" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/keyboard_confirm_settings</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
    </style>
    <style name="CustomButtonKeyboardClear" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/keyboard_clear_settings</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
    </style>
</resources>
